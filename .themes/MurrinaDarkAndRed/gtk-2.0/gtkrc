gtk_color_scheme = "fg_color:#ffffff\nbg_color:#222222\nbase_color:#111111\ntext_color:#ffffff\nselected_bg_color:#781F1C\nselected_fg_color:#ffffff\nlink_color:#88BBDD"

style "theme-default"
{
  GtkButton      ::default_border    = { 1, 1, 1, 1 }
  GtkRange       ::trough_border     = 0
  GtkPaned       ::handle_size       = 6
  GtkRange       ::slider_width      = 10
  GtkRange       ::stepper_size      = 15

  GtkScrollbar   ::min_slider_length = 30
  GtkCheckButton ::indicator_size    = 14
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16
  GtkScale       ::slider-length     = 24
  
  GtkWidget      ::link-color        = @link_color
  GtkHTML        ::link-color        = @link_color
  GtkHTML        ::alink-color       = @link_color
  GtkHTML        ::cite-color        = @link_color
  GnomeHref      ::link_color        = @link_color
  GtkIMHtml      ::hyperlink-color   = @link_color

  #GtkButton      ::draw-border = { 1,1,1,1 }
  #GtkButton::child_displacement_x = 0
  #GtkButton::child_displacement_y = 1
  #GtkButton::default_border = { 3, 3, 3, 3 }
  #GtkButton::default_outside_border = { 3, 3, 3, 3 }

  xthickness = 1
  ythickness = 1

  fg[NORMAL]        = @fg_color #"#ffffff"
  fg[PRELIGHT]      = shade(0.86666, @fg_color) #"#dddddd"
  fg[SELECTED]      = @fg_color
  fg[ACTIVE]        = @fg_color
  fg[INSENSITIVE]   = shade(0.4, @fg_color)

  bg[NORMAL]        = @bg_color
  bg[PRELIGHT]      = shade(2.5, @bg_color) #"#555555"
  bg[SELECTED]	    = @selected_bg_color #"#444444"
  bg[INSENSITIVE]   = shade(0.5, @bg_color) # "#111111"
  bg[ACTIVE]        = @bg_color # "#222222" # this (strangely) controls inactive tab BGs

  base[NORMAL]      = @base_color # "#444444"
  base[PRELIGHT]    = @selected_bg_color
  base[ACTIVE]      = @selected_bg_color
  base[SELECTED]    = @selected_bg_color
  base[INSENSITIVE] = shade(0.5, @base_color) # "#222222"

  text[NORMAL]      = @text_color
  text[PRELIGHT]    = shade(0.86666, @text_color)
  text[ACTIVE]      = @text_color
  text[SELECTED]    = @text_color
  text[INSENSITIVE] = shade(0.4, @text_color)

  engine "murrine" 
  {
      menuitemstyle = 2 # 0 = flat, 1 = glassy, 2 = striped
      contrast = 0.5
      glazestyle = 4 # 0 = flat hilight, 1 = curved hilight, 2 = concave style
      menubarstyle = 1 # 0 = flat, 1 = glassy, 2 = gradient, 3 = striped
      menubaritemstyle = 0 # 0 = menuitem look, 1 = button look
      listviewheaderstyle = 0 # 0 = flat, 1 = glassy
      roundness = 3 # 0 = rounded theme, 1 = squared theme
      animation = TRUE # FALSE = disabled, TRUE = enabled
      highlight_shade = 1.1
      menustyle = 0
      scrollbarstyle = 0
      gradients = TRUE
      listviewstyle = 0
      #lightborder_shade = 1.0
      #listviewstyle = 2
      #shadow_shades = { 0.8, 2.2 }
   }
}


style "theme-wide" = "theme-default"
{
  xthickness = 2
  ythickness = 2
#  bg[NORMAL]      = shade(2.5, @bg_color)
  bg[SELECTED]	  = shade(2.5, @bg_color)
#  base[PRELIGHT]    = shade(2.0, @bg_color)
#  base[ACTIVE]      = shade(2.0, @bg_color)
#  base[SELECTED]    = shade(2.0, @bg_color)

}

style "theme-wider" = "theme-default"
{
  xthickness = 3
  ythickness = 3
}

style "theme-entry" = "theme-wider"
{
  bg[SELECTED]	    =   @selected_bg_color #"#555555"
}

style "theme-button" = "theme-wider"
{
  bg[NORMAL]        = @bg_color
  bg[INSENSITIVE]   = shade(0.5, @bg_color)
  bg[PRELIGHT]      = @selected_bg_color #"#555555"
  bg[ACTIVE]	     = shade(0.5,@selected_bg_color)
}

style "theme-notebook" = "theme-wide"
{
  bg[NORMAL]      = shade(2.0,@bg_color)
  bg[INSENSITIVE] = shade(2.0,@bg_color)
  bg[SELECTED]    = @selected_bg_color
}

style "theme-tasklist" = "theme-default"
{
  xthickness = 5
  ythickness = 3
}

style "theme-menu" = "theme-default"
{
  xthickness = 2
  ythickness = 1
}

style "theme-menu-item" = "theme-default"
{
  ythickness = 3
  fg[NORMAL] = @fg_color
  text[PRELIGHT] = @text_color
}

style "theme-menubar" = "theme-default"
{
  #ythickness = 3
  bg[NORMAL] = shade(1.3, @bg_color) #"#222222"
  fg[NORMAL] = @fg_color
  fg[ACTIVE] = @selected_fg_color
  text[NORMAL] = @text_color
  text[PRELIGHT] = @selected_bg_color
  base[PRELIGHT] = @selected_bg_color
  base[SELECTED] = @selected_bg_color
}

style "theme-menubar-item"
{
	ythickness = 4
	fg[PRELIGHT] = @selected_fg_color
	bg[PRELIGHT] = @selected_bg_color
}

style "theme-tree" = "theme-default"
{
  xthickness = 2
  ythickness = 2
  bg[NORMAL]        = @bg_color
}

style "theme-frame-title" = "theme-default"
{
  fg[NORMAL] = shade(0.8, @fg_color)
}

style "theme-tooltips" = "theme-default"
{
  xthickness = 4
  ythickness = 4
  bg[NORMAL] = shade(0.4, @selected_bg_color)
}

style "theme-progressbar" = "theme-wide"
{
  xthickness = 1
  ythickness = 1
}

style "theme-combo" = "theme-button"
{
}


style "metacity-frame"
{

  bg[SELECTED]  = @selected_bg_color

  fg[SELECTED]  = @selected_fg_color
}
class "MetaFrames" 	  style "metacity-frame"
class "GtkWindow"      style "metacity-frame"

